{% macro addAttributesMetadata(properties) -%}

   /**
    * {@inheritdoc}
    */
    protected function attributesMetadata(): array
    {
        return [
        {% for property in properties %}
    '{{ property.name }}' => [
                'type'              => '{{ property.type }}',
                'actionName'        => '{{ property.actionName }}',
                'required'          => {% if property.required %} true {% else%} false {% endif -%},
            ],

        {% endfor %}];
    }
{% endmacro %}